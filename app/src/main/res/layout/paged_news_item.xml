<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/paged_news_item_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@drawable/s1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/paged_news_item_img">

        <TextView
            android:id="@+id/paged_news_item_txt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="5dp"
            android:maxLines="3"
            android:text="在理想与现实之间，找到了平衡音色的能力 —记东方之声ES1000耳机放大器试听"
            android:textColor="#282626"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/count"
            android:layout_below="@+id/paged_news_item_txt"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:text="100收藏 100评论"
            android:layout_marginRight="10dp"
            android:textColor="#5c5c5c" />

    </RelativeLayout>

</RelativeLayout>